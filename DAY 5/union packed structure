module union_packed;
  
  typedef union packed{
    bit[15:0]a;
    bit[15:0]b;
  }union_packed;
  
union_packed u;
  initial begin
    
    u.a=16'd222;
    u.b=16'd233;
    
    $display("print all union packed");
    $display("all union packed=%p",u);
    $display("a=%0d",u.a);
    $display("b=%0d",u.b);
    
  end 
endmodule
    
  output:print all union packed
# all union packed='{a:233, b:233}
# a=233
# b=233
