
module dynamic_array;
  int a[];
 
  initial begin
    
    a=new[5];
    a='{1,2,3,4,5};
    
    a=new[15](a);
    
    foreach (a[i])
      $display("a[%0d]=%0d",i,a[i]);
  end
 
endmodule  


    
